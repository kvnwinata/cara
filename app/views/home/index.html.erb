<div class='span8 offset2' >

	<h1 class='center'>Cara</h1>

	<legend>
		Enter your text here:
	</legend>
	
	<div class='center'>
		<textarea class='textarea-home' id='input' rows="4"></textarea>
	</div>
	
	<legend>
		Same text in Cara:
	</legend>

</div>

<div class='span12'>

	<div id='options'>

		<div class='row'>
			<div class='span1 offset2'>
				Font Size:
			</div>
			<div class='span2'>
				<select id='font-size'>
					<option>6</option>
					<option>7</option>
					<option>8</option>
					<option>9</option>
					<option>10</option>
					<option>11</option>
					<option>12</option>
					<option>14</option>
					<option>16</option>
					<option>18</option>
					<option>20</option>
					<option>24</option>
					<option>36</option>
				</select>
			</div>
			<div class='span1 offset2'>
				Font Style:
			</div>
			<div class='span2'>
				<select id='font-style'>
					<option>sans-serif</option>
					<option>serif</option>
				</select>
			</div>

		</div>
		<div class='row'>
			<div class='span1 offset2'>
				Font Width:
			</div>
			<div class='span2'>
				<select id='font-width'>
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
					<option>6</option>
					<option>7</option>
				</select>
			</div>
			<div class='span1 offset2'>
				Font Color:
			</div>
			<div class='span2'>
				<select id='font-color'>
					<option>black</option>
					<option>red</option>
					<option>blue</option>
					<option>green</option>
					<option>orange</option>
					<option>purple</option>
					<option>teal</option>
					<option>magenta</option>
					<option>brown</option>
					<option>grey</option>
				</select>
			</div>
		</div>
	</div>
	<div class='center'>
	<canvas id="textarea-output" width=900 height=600></canvas>
</div>
</div>